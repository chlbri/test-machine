{
  "version": "0.1.6",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "tsc": "tsc",
    "build": "pnpm run test && pnpm run tsc && pnpm run lint",
    "build:-test": "pnpm run tsc && pnpm run lint",
    "test": "jest",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx,yml,json}\"",
    "lint": "pnpm run prettier && pnpm run eslint -- --fix",
    "rm": "./node_modules/.bin/rimraf -rf node_modules pnpm.lock",
    "rinit": "pnpm run rm && pnpm run pnpm",
    "publish": "pnpm run rm && pnpm run clean && pnpm run pnpm",
    "pnpm": "pnpm install",
    "upgrade": "pnpm upgrade",
    "git-push": "git push --follow-tags",
    "git-build-push": "pnpm install && pnpm build && pnpm run git-push",
    "git-publish": "pnpm run git-build-push && git checkout main && git merge dev && pnpm run git-push && git checkout dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "name": "test-machine",
  "author": "chlbri",
  "module": "dist/test-machine.esm.js",
  "size-limit": [
    {
      "path": "dist/test-machine.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/test-machine.esm.js",
      "limit": "50 KB"
    }
  ],
  "dependencies": {
    "core": "github:chlbri/core"
  },

  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "husky": "^6.0.0",
    "immer": "^9.0.6",
    "jest": "^27.3.1",
    "nanoid": "^3.1.23",
    "size-limit": "^4.11.0",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.2.4",
    "xstate": "^4.25.0"
  }
}
